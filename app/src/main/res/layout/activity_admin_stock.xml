<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    tools:context=".ui.admin.stock.AdminStockActivity">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <include
            layout="@layout/layout_admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- HEADER -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock Dashboard"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monitor your inventory and stock levels"
                                android:textSize="14sp"
                                android:textColor="@color/gray500"/>
                        </LinearLayout>

                        <!-- Edit Button (Top Right) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnEditStock"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#2E7D32"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/white"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- TOTAL ITEMS CARD -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E3F2FD"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#F5F9FF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <!-- Icon Container -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#E3F2FD">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_box"
                                    app:tint="#2962FF"
                                    android:layout_gravity="center"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Items"
                                android:textColor="#555555"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:id="@+id/tvTotalItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#2962FF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- TOTAL STOCK VALUE CARD -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E8F5E9"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#F1F8E9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#C8E6C9">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_money"
                                    app:tint="#2E7D32"
                                    android:layout_gravity="center"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Stock Value"
                                android:textColor="#555555"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:id="@+id/tvTotalValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹ 9,774"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#2E7D32"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- LOW STOCK ITEMS CARD -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#FFF8E1"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#FFFDE7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#FFF9C4">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_warning"
                                    app:tint="#FBC02D"
                                    android:layout_gravity="center"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low Stock Items"
                                android:textColor="#555555"
                                android:layout_marginTop="12dp"/>

                            <TextView
                                android:id="@+id/tvLowStock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FBC02D"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <!-- 30-DAY MOVEMENT CARD -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0F7FA"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#F0FDFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#E0F7FA">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_swap"
                                    app:tint="#00BCD4"
                                    android:layout_gravity="center"/>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30-Day Movement"
                                android:textColor="#555555"
                                android:layout_marginTop="12dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <TextView
                                    android:id="@+id/tvMovementIn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In: 0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#4CAF50"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" | "
                                    android:textSize="16sp"
                                    android:textColor="#9E9E9E"/>

                                <TextView
                                    android:id="@+id/tvMovementOut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Out: 2,766"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#F44336"/>

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <!-- DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/menu_admin_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
