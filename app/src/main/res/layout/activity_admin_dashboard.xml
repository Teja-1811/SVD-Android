<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- COMMON ADMIN TOOLBAR -->
        <include
            layout="@layout/layout_admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ================= DASHBOARD CONTENT ================= -->

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:useDefaultMargins="true">


                    <!-- ================= CUSTOMERS ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/card_customers"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_users"
                                android:tint="@color/icon_blue"
                                android:layout_marginEnd="12dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customers"
                                    android:textColor="@color/icon_blue"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvCustomers"
                                    android:text="..."
                                    android:textColor="@color/icon_blue"
                                    android:textSize="26sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>



                    <!-- ================= ITEMS ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/card_items"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_items"
                                android:tint="@color/icon_green"
                                android:layout_marginEnd="12dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Items"
                                    android:textColor="@color/icon_green"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvItems"
                                    android:text="--"
                                    android:textColor="@color/icon_green"
                                    android:textSize="26sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>



                    <!-- ================= SALES ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/card_sales"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_rupee"
                                android:tint="@color/icon_orange"
                                android:layout_marginEnd="12dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sales Today"
                                    android:textColor="@color/icon_orange"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvSalesToday"
                                    android:text="--"
                                    android:textColor="@color/icon_orange"
                                    android:textSize="26sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>



                    <!-- ================= DUES ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/card_dues"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_bill"
                                android:tint="@color/icon_red"
                                android:layout_marginEnd="12dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dues"
                                    android:textColor="@color/icon_red"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvDues"
                                    android:text="--"
                                    android:textColor="@color/icon_red"
                                    android:textSize="26sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ================= PENDING ORDERS (FULL WIDTH) ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_columnSpan="2"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/design_default_color_on_primary">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_orders"
                                android:tint="@color/icon_blue"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Orders"
                                android:textColor="@color/icon_blue"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvPendingOrders"
                                android:text="--"
                                android:textColor="@color/icon_blue"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"/>

                            <ImageButton
                                android:id="@+id/btnViewOrders"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_eye"
                                android:tint="@color/icon_blue"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ================= NOT ORDERED TODAY (FULL WIDTH) ================= -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_columnSpan="2"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/design_default_color_on_primary">

                        <!-- CARD ROOT MUST BE VERTICAL -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <!-- HEADER -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <!-- LEFT TITLE + ICON -->
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_marginEnd="12dp"
                                        android:src="@drawable/ic_orders"
                                        android:tint="@color/icon_red"/>

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Not Ordered Today"
                                        android:textColor="@color/icon_red"
                                        android:textSize="14sp"/>
                                </LinearLayout>

                                <!-- RIGHT COUNT -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tvNotOrdered"
                                    android:text="0"
                                    android:textColor="@color/icon_red"
                                    android:textStyle="bold"
                                    android:textSize="22sp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="#33000000" />


                            <!-- LIST OF CUSTOMERS -->
                            <LinearLayout
                                android:id="@+id/layoutNoOrdersList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>



    <!-- ================= DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/menu_admin_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
