<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <!-- ================= MAIN CONTENT ================= -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- COMMON ADMIN TOOLBAR -->
        <include
            layout="@layout/layout_admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ================= SEARCH & ADD ================= -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@color/surface_background"
            android:elevation="2dp">

            <!-- Search Bar -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_icon_btn"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Search customer..."
                    android:textSize="14sp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/gray500"
                    android:maxLines="1"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="8dp"
                    app:drawableTint="@color/gray500"/>
            </FrameLayout>

            <!-- Add Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:backgroundTint="@color/icon_blue"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic_add"
                app:fabSize="mini"/>

        </LinearLayout>

        <!-- ================= CUSTOMERS LIST ================= -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No customers found"
                    android:textSize="16sp"
                    android:textColor="@color/gray500"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>

                <!-- List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCustomers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="12dp"/>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <!-- ================= DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/menu_admin_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
