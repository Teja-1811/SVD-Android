<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#80BDBDBD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- HEADER: Bill # and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBillNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bill #INV-000000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvBillDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024"
                android:background="@drawable/bg_qty_outline"
                android:backgroundTint="#757575"
                android:textColor="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Customer Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: "
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textStyle="bold"
                android:textColor="#2196F3"/>

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0.00"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- Profit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit: "
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tvProfitAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0.00"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- View Button -->
            <ImageButton
                android:id="@+id/btnView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_eye"
                android:tint="#2196F3"
                android:background="@drawable/bg_icon_btn"
                android:backgroundTint="#FFFFFF"
                android:padding="8dp"
                android:scaleType="fitCenter"/>
            <!-- Using bg_icon_btn assuming it has a border, if not I might need to make one. 
                 The screenshot has colored borders. 
                 I'll make a custom drawable for outline if needed, but for now standard background.
            -->

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:tint="#FF9800"
                android:background="@drawable/bg_icon_btn"
                android:backgroundTint="#FFFFFF"
                android:padding="8dp"
                android:scaleType="fitCenter"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Download Button -->
            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bill"
                android:tint="#4CAF50"
                android:background="@drawable/bg_icon_btn"
                android:backgroundTint="#FFFFFF"
                android:padding="8dp"
                android:scaleType="fitCenter"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_trash"
                android:tint="#F44336"
                android:background="@drawable/bg_icon_btn"
                android:backgroundTint="#FFFFFF"
                android:padding="8dp"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
