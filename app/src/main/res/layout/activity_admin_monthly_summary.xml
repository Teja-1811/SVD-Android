<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <include
            layout="@layout/layout_admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- FILTERS ROW 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Area:"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerArea"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_qty_outline"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Customer:"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_qty_outline"/>
                </LinearLayout>

            </LinearLayout>

            <!-- FILTERS ROW 2 -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Month:"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="January, 2026"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:background="@drawable/bg_qty_outline"
                        app:drawableEndCompat="@drawable/ic_calendar"
                        android:drawablePadding="8dp"
                        android:paddingEnd="12dp"/>
                </LinearLayout>

                 <com.google.android.material.button.MaterialButton
                     android:id="@+id/btnView"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     app:icon="@drawable/ic_eye"
                     app:iconGravity="textStart"
                     app:iconPadding="0dp"
                     android:insetLeft="0dp"
                     android:insetTop="0dp"
                     android:insetRight="0dp"
                     android:insetBottom="0dp"
                     android:padding="0dp"
                     app:strokeColor="#00BCD4"
                     app:strokeWidth="1dp"
                     app:backgroundTint="@android:color/transparent"
                     app:iconTint="#00BCD4"
                     app:cornerRadius="4dp"
                     android:layout_marginStart="8dp"/>

                 <com.google.android.material.button.MaterialButton
                     android:id="@+id/btnDownload"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     app:icon="@drawable/ic_download"
                     app:iconGravity="textStart"
                     app:iconPadding="0dp"
                     android:insetLeft="0dp"
                     android:insetTop="0dp"
                     android:insetRight="0dp"
                     android:insetBottom="0dp"
                     android:padding="0dp"
                     app:strokeColor="#4CAF50"
                     app:strokeWidth="1dp"
                     app:backgroundTint="@android:color/transparent"
                     app:iconTint="#4CAF50"
                     app:cornerRadius="4dp"
                     android:layout_marginStart="8dp"/>

                 <com.google.android.material.button.MaterialButton
                     android:id="@+id/btnReset"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     app:icon="@drawable/ic_close"
                     app:iconGravity="textStart"
                     app:iconPadding="0dp"
                     android:insetLeft="0dp"
                     android:insetTop="0dp"
                     android:insetRight="0dp"
                     android:insetBottom="0dp"
                     android:padding="0dp"
                     app:strokeColor="#F44336"
                     app:strokeWidth="1dp"
                     app:backgroundTint="@android:color/transparent"
                     app:iconTint="#F44336"
                     app:cornerRadius="4dp"
                     android:layout_marginStart="8dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="16dp"/>


            <!-- SUMMARY CARDS - REUSED from previous implementation, but hidden initially maybe?
                 Or just placed below. The screenshot only shows filters, but it's a "summary page".
                 I'll keep the summary cards below the filters as it was before, just updated header.
            -->

            <!-- SUMMARY CARDS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTotalInvoice"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Total Invoice: ₹47608.01"
                    android:background="@drawable/bg_status_active"
                    android:backgroundTint="#D32F2F"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTotalPaid"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Total Paid: ₹29113.23"
                    android:background="@drawable/bg_status_active"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTotalDue"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Due: ₹18494.78"
                    android:background="@drawable/bg_status_active"
                    android:backgroundTint="#FFC107"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>
                
                <!-- Save All Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Save All"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_money_bag"
                    app:iconTint="#E65100"
                    app:iconSize="16dp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="#2E7D32"
                    app:strokeWidth="1dp"
                    app:cornerRadius="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

            </LinearLayout>

            <!-- TABLE HEADER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Blue Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#2962FF"
                        android:padding="12dp">
                        
                        <TextView
                            android:id="@+id/tvCustomerNameHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dodla"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Columns Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Date"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="start"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Invoice"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Paid"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <!-- LIST CONTENT -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

    <!-- DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/menu_admin_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
