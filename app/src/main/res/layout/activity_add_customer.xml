<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <include
            layout="@layout/layout_admin_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Scrollable Form -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill the form to save customer details"
                    android:textColor="@color/gray500"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"/>

                <!-- ================= CUSTOMER INFO CARD ================= -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/card_stroke_color"
                    app:cardBackgroundColor="@color/card_background"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_person"
                                app:tint="@color/icon_blue"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customer Information"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!-- Row 1: Name & Shop Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customer Name *"
                                android:textSize="12sp"
                                android:textColor="@color/textColorSecondary"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/etCustomerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:padding="10dp"
                                android:hint="Enter Name"
                                android:textSize="14sp"
                                android:textColor="@color/textColorPrimary"
                                android:inputType="textPersonName"
                                android:layout_marginBottom="16dp"/>

                            <!-- Shop Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shop Name"
                                android:textSize="12sp"
                                android:textColor="@color/textColorSecondary"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/etShopName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:padding="10dp"
                                android:hint="Enter Shop Name"
                                android:textSize="14sp"
                                android:textColor="@color/textColorPrimary"
                                android:inputType="text"
                                android:layout_marginBottom="16dp"/>

                        </LinearLayout>

                        <!-- Row 2: Retailer ID & Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Retailer ID -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Retailer ID"
                                android:textSize="12sp"
                                android:textColor="@color/textColorSecondary"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/etRetailerId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:padding="10dp"
                                android:hint="Enter Retailer ID"
                                android:textSize="14sp"
                                android:textColor="@color/textColorPrimary"
                                android:inputType="text"
                                android:layout_marginBottom="16dp"/>

                            <!-- Phone -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number *"
                                android:textSize="12sp"
                                android:textColor="@color/textColorSecondary"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:padding="10dp"
                                android:hint="+91"
                                android:textSize="14sp"
                                android:textColor="@color/textColorPrimary"
                                android:inputType="phone"
                                android:layout_marginBottom="16dp"/>

                        </LinearLayout>

                        <!-- Is Commissioned Checkbox -->
                        <CheckBox
                            android:id="@+id/cbCommissioned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Is Commissioned (Eligible for commission)"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ================= SHIPPING ADDRESS CARD ================= -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/card_stroke_color"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location_pin"
                                app:tint="@color/icon_blue"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shipping Address"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!-- Flat / Building No. -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flat / Building No."
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/etAddressLine1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext"
                            android:padding="10dp"
                            android:hint="Enter Flat / Building No"
                            android:textSize="14sp"
                            android:textColor="@color/textColorPrimary"
                            android:inputType="textPostalAddress"
                            android:layout_marginBottom="16dp"/>

                        <!-- Area / Locality -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area / Locality"
                            android:textSize="12sp"
                            android:textColor="@color/textColorSecondary"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/etArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext"
                            android:padding="10dp"
                            android:hint="Enter Area / Locality"
                            android:textSize="14sp"
                            android:textColor="@color/textColorPrimary"
                            android:inputType="textPostalAddress"
                            android:layout_marginBottom="16dp"/>

                        <!-- PIN, City, State Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- PIN -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PIN Code"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorSecondary"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:id="@+id/etPinCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_edittext"
                                    android:padding="10dp"
                                    android:hint="534427"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:inputType="number"/>
                            </LinearLayout>

                            <!-- City -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorSecondary"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:id="@+id/etCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_edittext"
                                    android:padding="10dp"
                                    android:hint="GGL"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:inputType="text"/>
                            </LinearLayout>

                            <!-- State -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="State"
                                    android:textSize="12sp"
                                    android:textColor="@color/textColorSecondary"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:id="@+id/etState"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_edittext"
                                    android:padding="10dp"
                                    android:hint="AP"
                                    android:textSize="14sp"
                                    android:textColor="@color/textColorPrimary"
                                    android:inputType="text"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/surface_background"
            android:elevation="4dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/textColorSecondary"
                app:strokeColor="@color/gray500"
                android:layout_marginEnd="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Customer"
                app:icon="@drawable/ic_add"
                app:backgroundTint="@color/icon_blue"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/menu_admin_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
