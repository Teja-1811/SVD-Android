<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/editTextStroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/editTextBackground">

        <!-- PRODUCT IMAGE -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_image_round"
            android:scaleType="centerInside"
            android:src="@drawable/ic_milk_placeholder" />

        <!-- DETAILS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Crate QTY : "
                android:textSize="13sp"
                android:textColor="@color/icon_red"/>

            <TextView
                android:id="@+id/tvPcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:id="@+id/tvMrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP:"
                android:textSize="13sp"
                android:textColor="@color/icon_red" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/icon_green" />

            <TextView
                android:id="@+id/tvMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Margin:"
                android:textSize="14sp"
                android:textColor="@color/icon_green" />

            <!-- QTY + TOTAL -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_qty_outline"
                    android:backgroundTint="@color/icon_red"
                    android:src="@drawable/ic_minus"
                    android:tint="@color/icon_red" />

                <!-- ðŸ”¥ KEYBOARD EDITABLE QTY -->
                <EditText
                    android:id="@+id/etQty"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="6dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="4dp"
                    android:textColor="@color/textColorPrimary"/>

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_qty_outline"
                    android:backgroundTint="@color/icon_green"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/icon_green"/>

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="â‚¹0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
