<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================= CUSTOMER INFO CARD ================= -->

    <style name="CustomerInfoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="CustomerInfoContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomerInfoIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="CustomerInfoTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="CustomerInfoValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ================= ORDER CHIP (UNSELECTED) ================= -->

    <!-- ORDER CHIP (UNSELECTED) -->
    <style name="OrderChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/gray500</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ORDER CHIP (SELECTED) -->
    <style name="OrderChipSelected" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/icon_green</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
